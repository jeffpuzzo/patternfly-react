{
  "compilerOptions": {
    "rootDir": "./",
    "assumeChangesOnlyAffectDirectDependencies": true,
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "baseUrl": ".",
    "paths": {
      "@testing/*": ["testing/*"]
    },
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "composite": true,
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "strictNullChecks": false,
    "isolatedModules": true,
    "plugins": [{ "transform": "transformer-cjs-imports" }]
  },
  "exclude": ["packages/**/examples/**"]
}
